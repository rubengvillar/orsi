---
import "../index.css";
import UserMenu from "../components/layout/UserMenu";
import Sidebar from "../components/layout/Sidebar";
import MobileMenuButton from "../components/layout/MobileMenuButton";

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | Stock Control</title>
    </head>
    <body class="bg-gray-50 flex h-screen overflow-hidden">
        <!-- Sidebar container -->
        <Sidebar client:load currentPath={currentPath} />

        <!-- Main Content -->
        <main class="flex-1 flex flex-col h-full overflow-hidden relative">
            <!-- Header for Mobile / Breadcrumbs -->
            <header
                class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-6 shadow-sm z-30"
            >
                <div class="flex items-center gap-4">
                    <MobileMenuButton client:load />
                    <h2 class="text-xl font-semibold text-slate-800">
                        {title}
                    </h2>
                </div>
                <div class="flex items-center gap-4">
                    <UserMenu client:load />
                </div>
            </header>

            <!-- Page Content -->
            <div class="flex-1 overflow-y-auto p-6">
                <slot />
            </div>
        </main>
    </body>
</html>
