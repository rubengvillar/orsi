---
import "../index.css";
import {
    LayoutDashboard,
    Package,
    Shield,
    Users,
    LogOut,
    Box,
    Scissors,
} from "lucide-react";
import UserMenu from "../components/layout/UserMenu";

const { title } = Astro.props;

// Mock navigation items (will be dynamic based on permisssions later)
const navItems = [
    { label: "Dashboard", href: "/dashboard", icon: LayoutDashboard },
    { label: "Ordenes", href: "/orders", icon: Box },
    { label: "Accesorios", href: "/inventory/accessories", icon: Package },
    { label: "Perfiles", href: "/inventory/profiles", icon: Package },
    { label: "Vidrios", href: "/inventory/glass", icon: Package },
    { label: "Optimizar Cortes", href: "/inventory/optimizer", icon: Scissors },
    { label: "Plan de Cortes", href: "/inventory/cuts", icon: Scissors },
    {
        label: "Insumos Vidrio",
        href: "/inventory/glass-accessories",
        icon: Package,
    },
    { label: "Usuarios", href: "/admin/users", icon: Users },
    { label: "Operarios", href: "/admin/operators", icon: Users },
    { label: "Roles", href: "/admin/roles", icon: Shield },
    { label: "Permisos", href: "/admin/permissions", icon: Shield },
    { label: "Auditoría", href: "/admin/audit", icon: Shield },
];
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | Stock Control</title>
    </head>
    <body class="bg-gray-50 flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <aside class="w-64 bg-slate-900 text-white hidden md:flex flex-col">
            <div class="p-6 border-b border-slate-700">
                <h1 class="text-2xl font-bold tracking-tight text-blue-400">
                    Orsi Stock
                </h1>
            </div>

            <nav class="flex-1 overflow-y-auto py-4">
                <ul class="space-y-1 px-3">
                    {
                        navItems.map((item) => (
                            <li>
                                <a
                                    href={item.href}
                                    class="flex items-center gap-3 px-3 py-2.5 rounded-lg hover:bg-slate-800 text-slate-300 hover:text-white transition-colors"
                                >
                                    <item.icon className="w-5 h-5" />
                                    <span class="font-medium">
                                        {item.label}
                                    </span>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </nav>

            <div class="p-4 border-t border-slate-700">
                <a
                    href="/logout"
                    class="flex items-center gap-3 w-full px-3 py-2.5 rounded-lg hover:bg-slate-800 text-slate-400 hover:text-white transition-colors"
                >
                    <LogOut className="w-5 h-5" />
                    <span>Cerrar Sesión</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 flex flex-col h-full overflow-hidden relative">
            <!-- Header for Mobile / Breadcrumbs -->
            <header
                class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-6 shadow-sm"
            >
                <h2 class="text-xl font-semibold text-slate-800">{title}</h2>
                <div class="flex items-center gap-4">
                    <UserMenu client:load />
                </div>
            </header>

            <!-- Page Content -->
            <div class="flex-1 overflow-y-auto p-6">
                <slot />
            </div>
        </main>
    </body>
</html>
